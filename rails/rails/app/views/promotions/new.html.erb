<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@promotion) do |f| %>
            <%= f.label 'Siret' %>
            <%= f.text_field :siret, class: 'form-control' %>
            <%= f.label :kbis %>
            <%= f.file_field :kbis, class: 'form-control' %>
            <%= f.label 'Pièce d\'identité' %>
            <%= f.file_field :rid, class: 'form-control' %>
            <%= f.submit :submit, class: 'form-control' %>
        <% end %>
    </div>
</div>
