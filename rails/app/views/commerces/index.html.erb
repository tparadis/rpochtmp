<p id="notice"><%= notice %></p>

<h1>Listing Commerces</h1>

<%= link_to 'New Commerce', new_commerce_path %>


<table>
  <thead>
    <tr>
	<th>line</th>
	<th>enseigne</th>
	<th>website</th>
	<th>instagram</th>
	<th>facebook</th>
	<th>mail</th>
	<th>descr</th>
	<th>id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commerces.order('line').each do |commerce| %>
      <tr>
	<td><%= commerce.line %></td>
	<td><%= commerce.enseigne %></td>
	<td><%= commerce.website %></td>
	<td><%= commerce.instagram %></td>
	<td><%= commerce.facebook %></td>
	<td><%= commerce.email %></td>
	<td><%= commerce.description %></td>
	<td><%= commerce.id %></td>
        <td><%= link_to 'Show', commerce %></td>
        <td><%= link_to 'Edit', edit_commerce_path(commerce) %></td>
        <td><%= link_to 'Destroy', commerce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

