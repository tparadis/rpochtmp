<h1>Personnalisation d'un magasin</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:updated, url: user_path(@user), method: :patch ) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label 'Enseigne' %>
      <%= f.text_field :enseigne, placeholder: @shop.enseigne, class: 'form-control' %>

      <%= f.label 'Numéro de rue' %>
      <%= f.text_field :street_num, placeholder: @shop.street_num, class: 'form-control' %>

      <%= f.label 'Nom de rue' %>
      <%= f.text_field :street_name, placeholder: @shop.street_name, class: 'form-control' %>

      <%= f.label 'Catégorie 1' %>
      <%= f.text_field :tag0, placeholder: @shop.tag0, class: 'form-control' %>

      <%= f.label 'Catégorie 2' %>
      <%= f.text_field :tag1, placeholder: @shop.tag1, class: 'form-control' %>

      <%= f.label 'Catégorie 3' %>
      <%= f.text_field :tag2, placeholder: @shop.tag2, class: 'form-control' %>

      <%= f.label 'Description' %>
      <%= f.text_field :description, placeholder: @shop.description, class: 'form-control' %>

      <%= f.label 'Facebook' %>
      <%= f.text_field :facebook, placeholder: @shop.facebook, class: 'form-control' %>

      <%= f.submit "Confirmer", class: 'btn-block btn btn-primary' %>
    <% end %>

  </div>
</div>
