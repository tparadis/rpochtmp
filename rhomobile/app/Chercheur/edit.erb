<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @chercheur.tags %></h1>
    <a href="<%= url_for :action => :show, :id => @chercheur.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @chercheur.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @chercheur.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="chercheur[tags]" class="fieldLabel">Tags</label>
            <input type="text" id="chercheur[tags]" name="chercheur[tags]" value="<%= @chercheur.tags %>" <%= placeholder( "Tags" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="chercheur[chercher]" class="fieldLabel">Chercher</label>
            <input type="text" id="chercheur[chercher]" name="chercheur[chercher]" value="<%= @chercheur.chercher %>" <%= placeholder( "Chercher" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
